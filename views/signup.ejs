<!DOCTYPE html>
<html>
<head>
  <title>Sign In Page</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      font-family: Arial, sans-serif;
    }

    .container {
      max-width: 400px;
      margin: 100px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 4px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-size: 16px;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .form-group input[type="text"],
    .form-group input[type="password"] {
      width: 100%;
      padding: 8px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .submit-btn {
      display: block;
      width: 100%;
      padding: 10px;
      font-size: 16px;
      color: #fff;
      background-color: #007bff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .submit-btn:hover {
      background-color: #0056b3;
    }
    #confirm{
       z-index:100%;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><%=data.phone %></h1>

        <div class="form-group">
            <label for="phone">phone</label>

                <input type="text" id="phone" name="phone" value=<%= data.phone %>
                readonly >
       
           
          </div>
      <div class="form-group">
        <label for="password">Create Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <div class="form-group">
        <label for="otp">OTP Confirmation</label>
        <input type="text" id="otp" name="otp" required>
        
      </div>

      <button type="submit" class="submit-btn" onclick="checkOtp()">verify Otp</button>

  </div>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script>
    let Axios = axios.create();
    async function   checkOtp()  {
      let enteredOtp = document.querySelector('#otp').value 
      let phone = document.querySelector('#phone').value ;
      let res = await Axios.post('/users/verifyOtp',{enteredOtp : enteredOtp,phone : phone })
      if(res.data.valid === true && res.data.status === "approved")
      {
          Axios.post('/users/add',{phone : phone , password : document.querySelector("#password")})
          window.location.replace('/');
      }
    }
  </script>
</body>
</html>
